<%= form_for :player, url: name_set_path(@player) do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>
  
  <%= f.label :password %>:
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>:
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit "Configure Account" %>
<% end %><br><br>

<%= flash[:notice] %>
